{
  "name": "need-for-heat",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/react-native",
    "**/react-native/**",
    "**/@react-native-*",
    "**/@react-native-*/**",
    "**/react-native-*",
    "**/react-native-*/**",
    "**/*react-navigation/native*",
    "**/*react-navigation/native*/**",
    "**/expo",
    "**/expo/**",
    "**/@expo",
    "**/@expo/**",
    "**/expo-*",
    "**/expo-*/**",
    "**/metro-*",
    "**/metro-*/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "ci:eslint": "turbo run ci:eslint",
    "ci:tsc": "turbo run ci:tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "8.0.0",
    "eslint-config-nfh": "*",
    "prettier": "^3.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "turbo": "^1.10.14"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6"
  },
  "resolutions": {
    "**/@octokit/plugin-retry": "4.1.3"
  },
  "packageManager": "yarn@1.22.19"
}
