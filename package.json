{
  "name": "need-for-heat",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/react-native",
    "**/react-native/**",
    "**/@react-native-*",
    "**/@react-native-*/**",
    "**/react-native-*",
    "**/react-native-*/**",
    "**/*react-navigation/native*",
    "**/*react-navigation/native*/**",
    "**/expo",
    "**/expo/**",
    "**/@expo",
    "**/@expo/**",
    "**/expo-*",
    "**/expo-*/**",
    "**/metro-*",
    "**/metro-*/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "ci:eslint": "turbo run ci:eslint",
    "ci:tsc": "turbo run ci:tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.0",
    "eslint": "8.19.0",
    "eslint-config-nfh": "*",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "^29.6.3",
    "prettier": "^2.8.8",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "typescript": "5.0.4"
  },
  "resolutions": {
    "**/@octokit/plugin-retry": "4.1.3"
  },
  "packageManager": "yarn@3.6.4"
}