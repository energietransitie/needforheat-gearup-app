{
  "name": "need-for-heat",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/react-native",
    "**/react-native/**",
    "**/@react-native-*",
    "**/@react-native-*/**",
    "**/react-native-*",
    "**/react-native-*/**",
    "**/*react-navigation/native*",
    "**/*react-navigation/native*/**",
    "**/expo",
    "**/expo/**",
    "**/@expo",
    "**/@expo/**",
    "**/expo-*",
    "**/expo-*/**",
    "**/metro-*",
    "**/metro-*/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "ci:eslint": "turbo run ci:eslint",
    "ci:tsc": "turbo run ci:tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "node copy_react-native.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "eslint": "9.4.0",
    "eslint-config-nfh": "*",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "prettier": "^3.3.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/react": "^18.0.24",
    "typescript": "4.6.3"
  },
  "packageManager": "yarn@4.2.2"
}
