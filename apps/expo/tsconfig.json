{
  "extends": "tsconfig/expo.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "@types/jest",
      "react-native",
      "react-test-renderer"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    ".ci",
    "dist",
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "src/index.d.ts",
    "src/**/__tests__"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}